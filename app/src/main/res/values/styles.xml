<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LogoStyle" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_margin">@dimen/logo_layout_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="drawableTopCompat">@drawable/ic_two_tone_map_128</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextOutlinedStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/edit_text_outlined_background</item>
        <item name="android:textColorHint">@color/dim_gray</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
    </style>

    <style name="MaterialButtonBlueStyle" parent="MaterialButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/boeing_blue</item>
    </style>

    <style name="MaterialButtonRedStyle" parent="MaterialButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/neon_red</item>
    </style>

    <style name="TextLinkStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/action_text_padding</item>
    </style>

    <style name="CardStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="TextCardStyle" parent="CardStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:height">@dimen/text_card_height</item>
        <item name="android:padding">@dimen/text_card_padding</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="CenteredTextCardStyle" parent="TextCardStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="StandardTextCardStyle" parent="TextCardStyle">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextIconCardStyle" parent="CardStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:height">@dimen/text_icon_card_height_normal</item>
        <item name="android:padding">@dimen/text_icon_card_padding</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/text_icon_drawable_padding</item>
    </style>

    <style name="HeaderCardStyle" parent="CardStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/header_card_padding</item>
        <item name="android:drawablePadding">@dimen/header_card_drawable_padding</item>
    </style>

    <style name="ModelContentCardStyle">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ModelContentCardAvatarStyle">
        <item name="android:padding">@dimen/model_content_card_icon_padding</item>
    </style>

    <style name="ModelContentCardTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ModelContentCardSubtitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorScreenTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:elevation">4dp</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="ToolbarActionButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_action_button_end_margin</item>
    </style>

    <style name="ProfilePictureStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileSubtitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LightWindowStyle">
        <item name="android:background">?colorOnPrimary</item>
    </style>

    <style name="StandardBottomSheetStyle">
        <item name="android:background">@drawable/top_line_background</item>
        <item name="layout_behavior">@string/bottom_sheet_behavior</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_initial_peek_height</item>
    </style>

    <style name="SheetTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStartPadding">@dimen/chip_start_padding</item>
        <item name="chipEndPadding">@dimen/chip_end_padding</item>
    </style>

    <style name="ChipGroupStyle" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ImageButtonRippleStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/ripple_oval_background</item>
    </style>

    <style name="ReviewCardUserAvatarStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/review_card.user_avatar_end_margin</item>
    </style>

    <style name="ReviewCardTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="ReviewCardSubtitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ReviewCardRatingDateStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ReviewCardTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingCardTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="RateAndReviewCardTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RateAndReviewCardSubtitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?colorSecondaryVariant</item>
        <item name="tabSelectedTextColor">?colorSecondaryVariant</item>
        <item name="android:background">@drawable/tab_layout_background</item>
    </style>

    <style name="RatingBarNormalStyle" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:isIndicator">false</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="RatingBarSmallStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RouteConfigurationHeaderCardStyle">
        <item name="android:background">@drawable/bottom_line_background</item>
    </style>

    <style name="RouteConfigurationSubheadCardStyle">
        <item name="android:background">@drawable/bottom_line_background</item>
    </style>

    <style name="RouteConfigurationSubheadCardTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="RouteConfigurationSubheadCardSubtitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/route_configuration.subhead_card_subtitle_start_margin</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/toolbar_action_button_end_margin</item>
    </style>

    <style name="ModuleMainScreenStyle">
        <item name="android:background">?colorOnPrimary</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/floating_action_button.margin</item>
        <item name="backgroundTint">?colorOnPrimary</item>
    </style>
</resources>