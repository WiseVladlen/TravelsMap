<resources>
    <!-- Base application theme. -->
    <style name="Theme.TravelsMap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_de_france</item>
        <item name="colorSecondaryVariant">@color/boeing_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <!-- Styles. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>
</resources>