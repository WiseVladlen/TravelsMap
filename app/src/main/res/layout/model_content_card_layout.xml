<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModelContentCardStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/model_content_card_height">

    <ImageView
        android:id="@+id/imageView_avatar"
        style="@style/ModelContentCardAvatarStyle"
        android:layout_width="@dimen/model_content_card_icon_size"
        android:layout_height="@dimen/model_content_card_icon_size"
        android:contentDescription="@string/card_layout.avatar_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title"
            style="@style/ModelContentCardTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_subtitle"
            style="@style/ModelContentCardSubtitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>