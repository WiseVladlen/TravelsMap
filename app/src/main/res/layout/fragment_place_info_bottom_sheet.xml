<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sheet"
        style="@style/StandardBottomSheetStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/dragHandleView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_drag_handle_view_height" />

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/manage_label_bottom_sheet.header_card_size">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/manage_label_bottom_sheet.header_info_horizontal_margin"
                android:layout_marginTop="@dimen/manage_label_bottom_sheet.header_info_top_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_title"
                    style="@style/SheetTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/manage_label_bottom_sheet.header_info.title_bottom_margin" />

                <LinearLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/RatingBarSmallStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/rating_bar_small_horizontal_margin" />

                    <TextView
                        android:id="@+id/textView_number_of_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/close_button"
                style="@style/ImageButtonStyle"
                android:layout_width="@dimen/image_button_small_size"
                android:layout_height="@dimen/image_button_small_size"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/image_button_end_margin"
                android:contentDescription="@string/manage_label.close_button_description"
                android:src="@drawable/ic_baseline_close_24" />

        </FrameLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chip_group_height"
            android:paddingHorizontal="@dimen/manage_label_bottom_sheet.chip_group_horizontal_padding"
            android:theme="@style/ChipGroupStyle">

            <com.google.android.material.chip.Chip
                android:id="@+id/route_chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/manage_label.chip_route"
                app:chipIcon="@drawable/ic_baseline_route_24" />

            <com.google.android.material.chip.Chip
                android:id="@+id/label_chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/manage_label.chip_label"
                app:chipIcon="@drawable/ic_baseline_flag_24" />

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:tabMode="auto">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manage_label.tab_item_overview" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_label.tab_item_reviews" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/label_content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>